;; @@ [clj]
(system-start!
 (goldly/system
  {:id :notebook-click-counter
   :state 42
   :html  [:div.border-blue-300.border.m-8.p-2
           pink-panther
           [:div 
            "Clicked "
            [:button {:class "border m-2 p-3 border-pink-500"
                     :on-click ?incr} @state]
           " times"]]
   :fns {:incr (fn [_ s] (inc s))}}
  {:fns {}}))
